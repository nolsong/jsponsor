{
    "curly":      true,         // This option requires you to always put curly braces around blocks in loops and conditionals. JavaScript allows you to omit curly braces when the block consists of only one statement.
    "eqeqeq":     true,         // This options prohibits the use of == and != in favor of === and !==. The former try to coerce values before comparing them which can lead to some unexpected results.
    "freeze":     true,         // This options prohibits overwriting prototypes of native objects such as Array, Date and so on.
    "maxparams":  8,            // This option lets you set the max number of formal parameters allowed per function.
    "noarg":      true,         // This option prohibits the use of arguments.caller and arguments.callee.
    "nonew":      true,         // This option prohibits the use of constructor functions for side-effects. Some people like to call constructor functions without assigning its result to any variable.
    "notypeof":   true,         // This option suppresses warnings about invalid typeof operator values.
    "strict":     true,         // This option requires all functions to run in ECMAScript 5's strict mode. Strict mode is a way to opt in to a restricted variant of JavaScript.
    "undef":      true,         // This option prohibits the use of explicitly undeclared variables.
    "unused":     true,         // This option warns when you define and never use your variables.
    "boss":       true,         // This option suppresses warnings about the use of assignments in cases where comparisons are expected.
    "eqnull":     true,         // This option suppresses warnings about == null comparisons.
    "browser":    true,         // This option defines globals exposed by modern browsers
    "jasmine":    true,         // This option defines globals exposed by the Jasmine unit testing framework.
    "node":       true,         // This option defines globals available when your code is running inside of the Node runtime environment.
    "worker":     true,         // This option defines globals available when your code is running inside of a Web Worker.
    "expr":       true,         // This option suppresses warnings about the use of expressions where normally you would expect to see assignments or function calls.
    "globals":    ["jSponsor"]
}